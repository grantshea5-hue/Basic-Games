  <script>
    // ================== 2048 GAME ==================
    let board2048 = Array(4).fill().map(() => Array(4).fill(0));
    let score2048 = 0;

    function addRandomTile() {
      const empty = [];
      for (let i = 0; i < 4; i++) for (let j = 0; j < 4; j++) if (board2048[i][j] === 0) empty.push([i,j]);
      if (empty.length) {
        const [x, y] = empty[Math.floor(Math.random() * empty.length)];
        board2048[x][y] = Math.random() < 0.9 ? 2 : 4;
      }
    }

    function slide(row) {
      let newRow = row.filter(x => x);
      for (let i = 0; i < newRow.length - 1; i++) {
        if (newRow[i] === newRow[i+1]) {
          newRow[i] *= 2;
          score2048 += newRow[i];
          newRow[i+1] = 0;
        }
      }
      newRow = newRow.filter(x => x);
      while (newRow.length < 4) newRow.push(0);
      return newRow;
    }

    function move(direction) {
      let moved = false;
      if (direction === 'left' || direction === 'a') {
        for (let i = 0; i < 4; i++) {
          const newRow = slide(board2048[i]);
          if (newRow.join() !== board2048[i].join()) moved = true;
          board2048[i] = newRow;
        }
      } else if (direction === 'right' || direction === 'd') {
        for (let i = 0; i < 4; i++) {
          const newRow = slide(board2048[i].reverse()).reverse();
          if (newRow.join() !== board2048[i].join()) moved = true;
          board2048[i] = newRow;
        }
      } else if (direction === 'up' || direction === 'w') {
        for (let j = 0; j < 4; j++) {
          let col = [board2048[0][j], board2048[1][j], board2048[2][j], board2048[3][j]];
          const newCol = slide(col);
          if (newCol.join() !== col.join()) moved = true;
          for (let i = 0; i < 4; i++) board2048[i][j] = newCol[i];
        }
      } else if (direction === 'down' || direction === 's') {
        for (let j = 0; j < 4; j++) {
          let col = [board2048[0][j], board2048[1][j], board2048[2][j], board2048[3][j]];
          const newCol = slide(col.reverse()).reverse();
          if (newCol.join() !== col.join()) moved = true;
          for (let i = 0; i < 4; i++) board2048[i][j] = newCol[i];
        }
      }
      if (moved) addRandomTile();
      render2048();
      updateScore2048();
      checkWin2048();
    }

    function render2048() {
      const grid = document.getElementById('grid-2048');
      grid.innerHTML = '';
      board2048.forEach(row => {
        row.forEach(val => {
          const tile = document.createElement('div');
          tile.className = val ? `tile tile-${val}` : 'tile';
          tile.textContent = val || '';
          grid.appendChild(tile);
        });
      });
    }

    function updateScore2048() {
      document.getElementById('score-2048').textContent = score2048;
    }

    function checkWin2048() {
      if (board2048.flat().includes(2048)) {
        alert('You win! üèÜ');
      } else if (!board2048.flat().includes(0) && !canMove()) {
        alert('Game Over! Final Score: ' + score2048);
      }
    }

    function canMove() {
      for (let i = 0; i < 4; i++) {
        for (let j = 0; j < 4; j++) {
          if (board2048[i][j] === 0) return true;
          if (j < 3 && board2048[i][j] === board2048[i][j+1]) return true;
          if (i < 3 && board2048[i][j] === board2048[i+1][j]) return true;
        }
      }
      return false;
    }

    function reset2048() {
      board2048 = Array(4).fill().map(() => Array(4).fill(0));
      score2048 = 0;
      addRandomTile();
      addRandomTile();
      render2048();
      updateScore2048();
    }

    // ================== MEMORY GAME ==================
    const emojis = ['üçé','üçå','üçá','üçì','üçä','üçí','ü•ù','ü••','üçç','ü•≠','üçë','ü•≠'];
    let memoryCards = [];
    let flippedCards = [];
    let matchedPairs = 0;
    let lockBoard = false;

    function createMemoryCards() {
      const cards = [...emojis, ...emojis].sort(() => Math.random() - 0.5);
      memoryCards = cards.map((emoji, index) => ({
        id: index,
        emoji: emoji,
        flipped: false,
        matched: false
      }));
    }

    function renderMemory() {
      const grid = document.getElementById('memory-grid');
      grid.innerHTML = '';
      memoryCards.forEach((card, index) => {
        const cardEl = document.createElement('div');
        cardEl.className = 'memory-card';
        cardEl.dataset.index = index;
        cardEl.textContent = card.flipped || card.matched ? card.emoji : '?';
        if (card.flipped) cardEl.classList.add('flipped');
        if (card.matched) cardEl.classList.add('matched');
        cardEl.addEventListener('click', () => flipCard(index));
        grid.appendChild(cardEl);
      });
    }

    function flipCard(index) {
      if (lockBoard || memoryCards[index].flipped || memoryCards[index].matched) return;
      
      memoryCards[index].flipped = true;
      flippedCards.push(index);
      renderMemory();

      if (flippedCards.length === 2) {
        lockBoard = true;
        setTimeout(checkMatch, 1000);
      }
    }

    function checkMatch() {
      const [card1, card2] = flippedCards;
      if (memoryCards[card1].emoji === memoryCards[card2].emoji) {
        memoryCards[card1].matched = true;
        memoryCards[card2].matched = true;
        matchedPairs++;
        if (matchedPairs === 12) {
          document.getElementById('memory-status').textContent = 'You Win! üéâ';
        } else {
          document.getElementById('memory-status').textContent = `Matches: ${matchedPairs}/12`;
        }
      } else {
        memoryCards[card1].flipped = false;
        memoryCards[card2].flipped = false;
        document.getElementById('memory-status').textContent = 'No match! Try again';
      }
      flippedCards = [];
      lockBoard = false;
      renderMemory();
    }

    function resetMemory() {
      memoryCards = [];
      flippedCards = [];
      matchedPairs = 0;
      lockBoard = false;
      createMemoryCards();
      renderMemory();
      document.getElementById('memory-status').textContent = 'Click cards to flip';
    }

    // ================== EXISTING GAMES (shortened for space) ==================
    // Tic-Tac-Toe
    let board = Array(9).fill(null);
    let currentPlayer = 'X';
    let gameOver = false;

    function makeMove(index) {
      if (gameOver || board[index]) return;
      board[index] = currentPlayer;
      document.querySelectorAll('.ttt-cell')[index].textContent = currentPlayer;
      if (checkWin()) {
        document.getElementById('ttt-status').textContent = `Player ${currentPlayer} wins! üéâ`;
        gameOver = true;
      } else if (!board.includes(null)) {
        document.getElementById('ttt-status').textContent = "It's a draw! ü§ù";
        gameOver = true;
      } else {
        currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
        document.getElementById('ttt-status').textContent = `Player ${currentPlayer}'s turn`;
      }
    }

    function checkWin() {
      const wins = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
      return wins.some(combo => combo.every(i => board[i] === currentPlayer));
    }

    function resetTTT() {
      board = Array(9).fill(null);
      currentPlayer = 'X';
      gameOver = false;
      document.getElementById('ttt-status').textContent = "Player X's turn";
      document.querySelectorAll('.ttt-cell').forEach(btn => btn.textContent = '');
    }

    // Snake (shortened)
    const snakeCanvas = document.getElementById('snakeCanvas');
    const ctxSnake = snakeCanvas.getContext('2d');
    const grid = 18;
    let snake = [{x: 10, y: 10}];
    let dx = 1, dy = 0;
    let food = {x: Math.floor(Math.random()*20), y: Math.floor(Math.random()*20)};
    let scoreSnake = 0;

    // Snake functions (same as before, just shortened here)
    function updateSnake() {
      const head = {x: snake[0].x + dx, y: snake[0].y + dy};
      if (head.x < 0 || head.x >= 20 || head.y < 0 || head.y >= 20 || snake.some(s => s.x === head.x && s.y === head.y)) {
        snake = [{x:10,y:10}]; dx=1; dy=0; scoreSnake=0; food={x:Math.floor(Math.random()*20),y:Math.floor(Math.random()*20)};
        return;
      }
      snake.unshift(head);
      if (head.x === food.x && head.y === food.y) {
        scoreSnake++;
        food = {x: Math.floor(Math.random()*20), y: Math.floor(Math.random()*20)};
      } else {
        snake.pop();
      }
    }

    function gameLoopSnake() {
      ctxSnake.clearRect(0,0,360,360);
      updateSnake();
      ctxSnake.fillStyle = '#0f0';
      snake.forEach(s => ctxSnake.fillRect(s.x*grid, s.y*grid, grid-2, grid-2));
      ctxSnake.fillStyle = '#f00';
      ctxSnake.fillRect(food.x*grid, food.y*grid, grid-2, grid-2);
      ctxSnake.fillStyle = '#fff';
      ctxSnake.font = 'bold 20px Arial';
      ctxSnake.fillText(`Score: ${scoreSnake}`, 10, 25);
    }
    setInterval(gameLoopSnake, 140);

    // ================== HANGMAN (same as before) ==================
    const words = [
      {word: "APPLETON", hint: "Your city!"},
      {word: "WISCONSIN", hint: "Your home state!"},
      {word: "GROK", hint: "Your AI friend"},
      {word: "JAVASCRIPT", hint: "The language of the web"},
      {word: "PIZZA", hint: "Everyone loves it"},
      {word: "CODING", hint: "What you do a lot"},
      {word: "HANGMAN", hint: "This game's name"}
    ];

    let selectedWord = "";
    let guessedLetters = new Set();
    let wrongGuesses = 0;
    const maxWrong = 6;

    function pickWord() {
      const item = words[Math.floor(Math.random() * words.length)];
      selectedWord = item.word.toUpperCase();
      document.getElementById("hangman-hint").textContent = "Hint: " + item.hint;
    }

    function displayWord() {
      const display = selectedWord.split("").map(letter => 
        guessedLetters.has(letter) ? letter : "_"
      ).join(" ");
      document.getElementById("hangman-word").textContent = display;
      return display;
    }

    function guessLetter(letter) {
      if (guessedLetters.has(letter) || wrongGuesses >= maxWrong) return;
      guessedLetters.add(letter);
      const keys = document.querySelectorAll(".key");
      keys.forEach(k => {
        if (k.textContent === letter) {
          if (selectedWord.includes(letter)) {
            k.classList.add("correct");
          } else {
            k.classList.add("wrong");
            wrongGuesses++;
          }
          k.classList.add("used");
        }
      });
      displayWord();
      updateStatus();
    }

    function updateStatus() {
      const status = document.getElementById("hangman-status");
      if (wrongGuesses >= maxWrong) {
        status.textContent = `Game Over! üíÄ Word: ${selectedWord}`;
      } else if (!displayWord().includes("_")) {
        status.textContent = "You Win! üéâ";
      } else {
        status.textContent = `Wrong: ${wrongGuesses}/${maxWrong}`;
      }
    }

    function createKeyboard() {
      const keyboard = document.getElementById("hangman-keyboard");
      keyboard.innerHTML = "";
      "ABCDEFGHIJKLMNOPQRSTUVWXYZ".split("").forEach(letter => {
        const key = document.createElement("div");
        key.classList.add("key");
        key.textContent = letter;
        key.addEventListener("click", () => guessLetter(letter));
        keyboard.appendChild(key);
      });
    }

    function resetHangman() {
      guessedLetters.clear();
      wrongGuesses = 0;
      pickWord();
      displayWord();
      updateStatus();
      document.querySelectorAll(".key").forEach(k => k.classList.remove("correct", "wrong", "used"));
    }

    createKeyboard();
    resetHangman();

    // ================== CONTROLS ==================
    document.addEventListener('keydown', e => {
      e.preventDefault();
      
      // 2048
      if (['ArrowLeft','KeyA'].includes(e.code)) move('left');
      if (['ArrowRight','KeyD'].includes(e.code)) move('right');
      if (['ArrowUp','KeyW'].includes(e.code)) move('up');
      if (['ArrowDown','KeyS'].includes(e.code)) move('down');
      
      // Snake arrows
      if (e.code === 'ArrowUp' && dy === 0) { dx=0; dy=-1; }
      if (e.code === 'ArrowDown' && dy === 0) { dx=0; dy=1; }
      if (e.code === 'ArrowLeft' && dx === 0) { dx=-1; dy=0; }
      if (e.code === 'ArrowRight' && dx === 0) { dx=1; dy=0; }
      
      // Hangman letters
      const key = e.key.toUpperCase();
      if (/^[A-Z]$/.test(key)) guessLetter(key);
    });

    // Touch support for 2048
    document.getElementById('grid-2048').addEventListener('touchstart', e => {
      const touch = e.touches[0];
      const startX = touch.clientX;
      const startY = touch.clientY;
      document.addEventListener('touchend', function handler(e) {
        const endX = e.changedTouches[0].clientX;
        const endY = e.changedTouches[0].clientY;
        const diffX = startX - endX;
        const diffY = startY - endY;
        if (Math.abs(diffX) > Math.abs(diffY)) {
          if (diffX > 0) move('left'); else move('right');
        } else {
          if (diffY > 0) move('up'); else move('down');
        }
        document.removeEventListener('touchend', handler);
      });
    });

    // Initialize games
    reset2048();
    resetMemory();
  </script>

</body>
</html>
